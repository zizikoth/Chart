<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:overScrollMode="never"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.meme.chart.widget.BarChart
            android:id="@+id/mBarChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.meme.chart.widget.LineChart
            android:id="@+id/mLineChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.meme.chart.widget.RingChart
            android:id="@+id/mRingChart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <com.meme.chart.widget.ProgressChart
            android:id="@+id/mProgressChart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>